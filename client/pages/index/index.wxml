<!--index.wxml-->
<view class="container">
  <view class="page-head">
    <view class="page-head-title">Create New Room</view>
    <view class="page-head-line"></view>
  </view>
  <view class="page-body">
    <form catchsubmit="formSubmit">
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">Room 1</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" type="text" placeholder="(optional)" name="room"></input>
          </view>
        </view>
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">Story 1</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" type="text" placeholder="(optional)" name="story"></input>
          </view>
        </view>
      </view>
      <view class="weui-cells">
        <view class="weui-cell weui-cell_switch">
          <view class="weui-cell__bd">Do you want to score as well?</view>
          <view class="weui-cell__ft">
            <switch name="needScore" />
          </view>
        </view>
      </view>
      <view class="btn-area">
        <button type="primary" formType="submit">Create</button>
      </view>
    </form>
  </view>
</view>
