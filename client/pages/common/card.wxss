.card-grids {
  position: relative;
  overflow: hidden;
  margin-left: -5rpx;
  margin-right: -5rpx;
  margin-top: 25rpx;
}

.card-grid {
  position: relative;
  float: left;
  width: 25%;
  box-sizing: border-box;
}

.card {
  border-radius: 10rpx;
  margin: 5rpx;
  padding: 5rpx 8rpx;
  height: 200rpx;
  position: relative;
  border: 2rpx solid #979797;
  background-color: #fff;
  transition: border 0.3s, box-shadow 0.3s;
}

.card-center {
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 30rpx;
  bottom: 30rpx;
  right: 20rpx;
  left: 20rpx;
  border: 2rpx solid #D8D8D8;
  background-color: #fff;
}

.card-center image {
  width: 72rpx;
  height: 72rpx;
}

.card.selected {
  border-color: #0678c1;
  box-shadow: 0 0 10rpx rgba(6, 120, 193, 1);
}

.card-left-corner, .card-right-corner {
  height: 23rpx;
  position: absolute;
    display: flex;
  align-items: center;
  justify-content: center;
}

.card-left-corner image, 
.card-right-corner image {
  width: 25rpx;
  height: 25rpx;
}

.card-right-corner {
  right: 8rpx;
  bottom: 5rpx;
  transform: rotate(-180deg);
}
