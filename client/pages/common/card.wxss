.card-grids {
  position: relative;
  overflow: hidden;
  margin-left: -5rpx;
  margin-right: -5rpx;
  margin-top: 25rpx;
}

.card-grid {
  position: relative;
  float: left;
  width: 25%;
  box-sizing: border-box;
}

.card {
  background-color: #fff;
  border-radius: 8rpx;
  margin: 5rpx;
  padding: 14rpx;
  height: 200rpx;
  position: relative;
  border: 1px solid #979797;
}

.card-center {
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  font-size: 64rpx;
  top: 40rpx;
  bottom: 40rpx;
  right: 32rpx;
  left: 32rpx;
  border-radius: 8rpx;
}

.card:hover,
.card.selected {
  box-shadow: 0 0 4.95px 0.05px rgba(1,1,1,.05);
}

.card.selected {
  background-color: #179B16;
  color: #ffffff;
}

.card-left-corner,
.card-right-corner {
  font-size: 16rpx;
  color: #0678C1;
  position: absolute;
}

.card-right-corner {
  right: 14rpx;
  bottom: 14rpx;
  transform: rotate(-180deg);
}