.card-grids {
  position: relative;
  overflow: hidden;
  margin-left: -5rpx;
  margin-right: -5rpx;
  margin-top: 25rpx;
}

.card-grid {
  position: relative;
  float: left;
  width: 25%;
  box-sizing: border-box;
}

.card {
  border-radius: 8rpx;
  margin: 5rpx;
  padding: 14rpx;
  height: 200rpx;
  position: relative;
  border: 2rpx solid #0678C1;
  color: #0678C1;
  background-color: #00A0E9;
  transition: all 0.3s;
}

.card-center {
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  font-size: 48rpx;
  top: 32rpx;
  bottom: 32rpx;
  right: 32rpx;
  left: 32rpx;
  border-radius: 8rpx;
  border: 2rpx solid #0678C1;
  background-color: #fff;
}

.card.selected {
  box-shadow: 0 0 10px rgba(6, 120, 193, 0.8);
  background-color: #0678C1;
}

.card-left-corner,
.card-right-corner {
  font-size: 20rpx;
  line-height: 40rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  text-align: center;
  color: #0678C1;
  position: absolute;
  border: 2rpx solid #0678C1;
  font-weight: bold;
  background-color: #fff;
  z-index: 999;
}

.card-right-corner {
  right: 14rpx;
  bottom: 14rpx;
  transform: rotate(-180deg);
}