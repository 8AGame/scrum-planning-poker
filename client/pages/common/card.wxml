<template name="card">
  <view class="card {{selectedCard === card.value ? 'selected' : ''}}" data-card="{{card}}" bindtap="onCardTap">
    <view class="card-left-corner">
      {{card.corner}}
    </view>
    <view class="card-right-corner">
      {{card.corner}}
    </view>
    <view class="card-center">
      {{card.key}}
    </view>
  </view>
</template>