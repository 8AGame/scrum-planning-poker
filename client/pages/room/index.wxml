<import src="../common/card.wxml" />

<view class="container">
  <view class="page-head">
    <view class="page-head-title">{{name}}</view>
    <view class="page-head-line"></view>
  </view>
  <view class="page-body">
    <view class="page-section">
      <view class="page-section-spacing">
        <view class="card-grids">
          <view class="card-grid" wx:for="{{cards}}" wx:for-item="card" wx:key="card.key">
            <template bindtap="clickCard" is="card" data="{{ corner: card.corner, key: card.key, value: card.value, selectedValue: selectedValue }}"
            />
          </view>
        </view>
      </view>
    </view>
    <view class="page-section">
      <view class="page-section-spacing">
        <view class="kind-list">
          <view class="kind-list-item">
            <view class="kind-list-item-hd">
              <view class="kind-list-text">Waiting for host to start</view>
            </view>
            <view class="kind-list-item-bd">
              <view class="player-box">
                <view class="player">
                  <view class="player-hd"></view>
                  <view class="player-bd">
                    <view class="player-text">
                      Players:
                    </view>
                  </view>
                </view>
                <view class="player" wx:for="{{players}}" wx:for-item="player" wx:key="player.avatarUrl">
                  <view class="player-hd">
                    <image class="player-avatar" src="{{player.avatarUrl}}"></image>
                  </view>
                  <view class="player-bd">
                    <view class="player-text">
                      {{player.nickName}}
                    </view>
                  </view>
                  <view class="player-ft">
                  </view>
                </view>
                <view class="player" wx:for="{{players}}" wx:for-item="player" wx:key="player.avatarUrl">
                  <view class="player-hd">
                    <image class="player-avatar" src="{{player.avatarUrl}}"></image>
                  </view>
                  <view class="player-bd">
                    <view class="player-text">
                      {{player.nickName}}
                      <icon class="icon-small" type="success" size="23"></icon>
                    </view>
                  </view>
                  <view class="player-ft">
                    <view class="player-value">10</view>
                  </view>
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class="page-section">
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">Calc.</view>
          </view>
          <view class="weui-cell__bd">
            <picker bindchange="onCalcMethodChange" value="{{selectedCalcMethod}}" range="{{calcMethods}}">
              <view class="weui-input">{{calcMethods[selectedCalcMethod]}}</view>
            </picker>
          </view>
        </view>
      </view>
      <view class="weui-cells">
        <radio-group bindchange="onResultTypeChange">
          <label class="weui-cell weui-check__label">
            <view class="weui-cell__hd">
              <radio value="0" checked="true" />
            </view>
            <view class="weui-cell__bd">Average 10</view>
          </label>
          <label class="weui-cell weui-check__label">
            <view class="weui-cell__hd">
              <radio value="1" />
            </view>
            <view class="weui-cell__bd">Median 10</view>
          </label>
        </radio-group>
      </view>
    </view>
  </view>
  <view class="btn-area">
    <button type="primary" open-type="share">Invite</button>
  </view>
</view>